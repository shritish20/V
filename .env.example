# ==========================================
# üõ°Ô∏è VOLGUARD 19.0 CONFIGURATION
# ==========================================

# --- SYSTEM ---
ENV=production
PORT=8000

# SAFETY_MODE Options:
# "paper"  -> Virtual fills, no broker connection (Safest for testing)
# "shadow" -> Live data feed, virtual orders
# "live"   -> REAL MONEY TRADING
SAFETY_MODE=paper
PAPER_TRADING=True

# --- UPSTOX CREDENTIALS ---
# ‚ö†Ô∏è Update this token daily if not using the Auto-Refresher API
UPSTOX_ACCESS_TOKEN=your_access_token_here

# API Key/Secret are required if you use an external login script
UPSTOX_API_KEY=your_api_key
UPSTOX_API_SECRET=your_api_secret
REDIRECT_URI=http://localhost:5000/callback

# --- DATABASE (Docker Internal) ---
# These match the values in your docker-compose.yml
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_USER=volguard_user
POSTGRES_PASSWORD=secure_trading_password
POSTGRES_DB=volguard_db

# --- CAPITAL & ALLOCATION (INR) ---
ACCOUNT_SIZE=2000000.0
LOT_SIZE=75

# --- RISK LIMITS (Endgame Matrix) ---
# Maximum loss allowed per day (3% of Capital)
DAILY_LOSS_LIMIT_PCT=0.03

# Hard Capital Limits per Strategy Bucket
WEEKLY_MAX_RISK=8000.0
MONTHLY_MAX_RISK=10000.0
INTRADAY_MAX_RISK=4000.0

# --- PORTFOLIO GREEK LIMITS ---
# Critical for the new Risk Manager (risk_manager.py)
MAX_VEGA=1000.0
MAX_DELTA=300.0
MAX_THETA=-1500.0
MAX_GAMMA=50.0

# --- TRANSACTION COSTS ---
# Used for realistic Net PnL calculation
BROKERAGE_PER_ORDER=20.0
GST_RATE=0.18

# --- PRICING MODEL ---
# Risk-Free Rate for Black-Scholes (India 10Y Bond approx)
RISK_FREE_RATE=0.065
