# --- SYSTEM CONFIGURATION ---
ENV=production
PORT=8000

# --- SAFETY SETTINGS ---
# Options: paper (simulation), shadow (live data/sim orders), live (real money)
SAFETY_MODE=paper

# --- UPSTOX CREDENTIALS ---
# Update this TOKEN every morning manually!
UPSTOX_ACCESS_TOKEN=your_daily_access_token_here

# Needed for manual login script only
UPSTOX_API_KEY=your_api_key_from_console
UPSTOX_API_SECRET=your_api_secret_from_console
REDIRECT_URI=http://localhost:5000/callback

# --- CAPITAL & RISK ---
ACCOUNT_SIZE=2000000.0
LOT_SIZE=75

# Risk Limits (INR)
WEEKLY_MAX_RISK=8000.0
MONTHLY_MAX_RISK=10000.0
INTRADAY_MAX_RISK=4000.0
DAILY_LOSS_LIMIT_PCT=0.03

# Portfolio Limits
MAX_VEGA=1000.0
MAX_DELTA=300.0
MAX_THETA=-1500.0

# --- DATABASE (Docker default) ---
POSTGRES_SERVER=postgres
POSTGRES_USER=volguard_user
POSTGRES_PASSWORD=secure_trading_password
POSTGRES_DB=volguard_db
POSTGRES_PORT=5432

# --- MARKET CONFIG ---
MARKET_KEY_INDEX=NSE_INDEX|Nifty 50
ENABLE_3D_VISUALIZATION=True
