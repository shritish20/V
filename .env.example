# VolGuard 14.00 Configuration
# Copy this file to .env and update with your values

# Environment
ENV=production
PORT=8000

# Upstox API
UPSTOX_ACCESS_TOKEN=your_upstox_access_token_here
PAPER_TRADING=True

# Risk Management
ACCOUNT_SIZE=2000000.0
LOT_SIZE=75
MAX_RISK_PERCENT=0.01
MAX_VEGA=1000.0
MAX_DELTA=200.0
DAILY_LOSS_LIMIT_PCT=0.03

# Trading Parameters
PROFIT_TARGET_PCT=0.35
STOP_LOSS_MULTIPLE=2.0
MAX_SLIPPAGE_PERCENT=0.02

# Alert System
ALERT_EMAIL=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Data Sources (Optional - defaults will work)
NIFTY_HIST_URL=https://raw.githubusercontent.com/shritish20/VolGuard/main/nifty_50.csv
VIX_HISTORY_URL=https://raw.githubusercontent.com/shritish20/VolGuard/refs/heads/main/atmiv.csv
