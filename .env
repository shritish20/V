# ============================================
# VolGuard 19.0 - Production Configuration
# ============================================

# --- SAFETY MODE ---
# Options: "paper" (simulated trading) or "live" (real trading)
# KEEP THIS AS 'paper' FOR THE FIRST TEST RUN!
SAFETY_MODE=paper

# --- UPSTOX CREDENTIALS ---
UPSTOX_API_KEY=your_api_key_here
UPSTOX_API_SECRET=your_api_secret_here
UPSTOX_ACCESS_TOKEN=your_access_token_here
REDIRECT_URI=http://localhost

# --- ADMIN API SECURITY ---
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
VOLGUARD_ADMIN_KEY=your_secure_admin_key_here

# --- AI CONFIGURATION ---
GEMINI_API_KEY=your_gemini_api_key_here

# --- CAPITAL SETTINGS ---
ACCOUNT_SIZE=2000000.0
LOT_SIZE=75
MAX_LOTS=10

# --- EXCHANGE LIMITS ---
NIFTY_FREEZE_QTY=1800

# --- RISK LIMITS ---
DAILY_LOSS_LIMIT_PCT=0.03
WEEKLY_MAX_RISK=8000.0
MONTHLY_MAX_RISK=10000.0
INTRADAY_MAX_RISK=4000.0

# --- PORTFOLIO GREEK LIMITS ---
MAX_PORTFOLIO_VEGA=1000.0
MAX_PORTFOLIO_DELTA=300.0
MAX_PORTFOLIO_THETA=-1500.0
MAX_PORTFOLIO_GAMMA=50.0

# --- TRANSACTION COSTS ---
BROKERAGE_PER_ORDER=20.0
GST_RATE=0.18
RISK_FREE_RATE=0.065

# --- DATABASE (for Docker) ---
POSTGRES_SERVER=db
POSTGRES_USER=volguard_user
POSTGRES_PASSWORD=secure_password_123
POSTGRES_DB=volguard_db
POSTGRES_PORT=5432

# --- ALERTS (Optional Email) ---
ALERT_EMAIL=your_email@example.com
EMAIL_PASSWORD=your_app_password

# --- TELEGRAM ALERTS (Verified) ---
TELEGRAM_BOT_TOKEN=ffff
TELEGRAM_CHAT_ID=ffff

# --- ENVIRONMENT ---
ENV=production
PORT=8000
